name: Update Github Activity
on: 
  schedule:
    - cron: "*/30 * * * *" 
    workflow_dispatch: 

jobs:
  update_repo1:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - name: Update Github Activity
        uses: TheDanniCraft/activity-log@v1
        with:
          GITHUB_USERNAME: "oscardelgadoo"
          GITHUB_TOKEN: ${{ secrets.REPO_TOKEN}}
